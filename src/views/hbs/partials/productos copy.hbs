
<main class="container ">
<div class="container d-flex justify-content-center my-5">
    <div class="row my-2 mx-2 main">
        <!--left-column-->
        <div class="col-md-4 col-12 mycol">
            <!--image-->
            <img src="../../../public/img/rtaImage.jpeg" width="100%" height="100%">
        </div>
        <!--right-column-->
        <div class="col-md-8 col-12 xcol">
            <h2 class="title pt-5 pb-3">Agrega tu producto</h2>
            <form   class="myform" id="formularios" action="/productos/" method="post">
                <div class="row rone">
                    <div class="form-group col-md-6 fone py-3">
                        <input type="text" class="form-control" placeholder="Nombre" required name="title" id="title">
                    </div>
                    
                </div>
                <div class="row rtwo">
                    <div class="form-group col-md-6 fthree py-3">
                        <input  class="form-control jk" placeholder="Pricio" pattern="^\d*(\.\d{0,2})?$" required name="price" min="1" id="price">
                    </div>
                    
                </div>
                <div class="row rthree">
                    <div class="form-group col-md-6 ffive py-3">
                        <input type="text" class="form-control" placeholder="URL" required name="thumbnail" id="thumbnail">
                    </div>
                    
                </div>
                <div class="row rfour">
                    <div class="form-group col-md-6 fseven py-3">
                        
                        <div class="form-group col-md-6 fseven py-3">
                        <button type="submit" class="btn btn-primary" onclick="agregarProductos()"><span>Agregar</span></button>
                    </div>
                    </div>
                   
                </div>
            </form>
        </div>
    </div>
</div>

<div class="menu_menu">
  <table class="table table-striped table-dark">
  <thead> 
    <tr>
      
      <th scope="col">Figura</th>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
    </tr>
  </thead>
  <tbody class="cuerpo_tabla" id="cuerpo_tabla">
        {{#each  artuculos}}
    <tr id="producto_id_{{this.id}}">
      
      <td > <img src="{{this.thumbnail}}" alt="" width="50px"></td>
      <td>{{this.title}} </td>
      <td>{{this.price}}</td>
    </tr>
  
                
{{/each}}
    </tr>
  </tbody>
</table>
</div>                        

